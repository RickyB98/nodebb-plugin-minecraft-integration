{
	"id": "nodebb-plugin-minecraft-integration",
	"name": "NodeBB Plugin Minecraft Integration",
	"description": "NodeBB plugin to integrate your forum with your Minecraft Server using widgets, user syncing, group/rank syncing, sso, bukkit/bungeecord/sponge communication, and more.",
	"url": "https://github.com/yariplus/nodebb-plugin-minecraft-integration",
	"library": "./library.js",
	"less": [
		"public/less/style.less"
	],
	"scripts": [
		"public/js/client.js"
	],
	"hooks": [
		{ "hook": "static:app.load", "method": "load" },
		{ "hook": "filter:widgets.getWidgets", "method": "Hooks.filter.widgets.getWidgets" },
		{ "hook": "filter:admin.header.build", "method": "Hooks.filter.admin.header.build" },
        { "hook": "filter:widget.render:miChat",         "method": "Widgets.Chat.render" },
        { "hook": "filter:widget.render:miDirectory",    "method": "Widgets.Directory.render" },
        { "hook": "filter:widget.render:miGallery",      "method": "Widgets.Gallery.render" },
		{ "hook": "filter:widget.render:miMap",          "method": "Widgets.Map.render" },
        { "hook": "filter:widget.render:miPingGraph",    "method": "Widgets.PingGraph.render" },
		{ "hook": "filter:widget.render:miPlayersGraph", "method": "Widgets.PlayersGraph.render" },
		{ "hook": "filter:widget.render:miPlayersGrid",  "method": "Widgets.PlayersGrid.render" },
		{ "hook": "filter:widget.render:miStatus",       "method": "Widgets.Status.render" },
		{ "hook": "filter:widget.render:miTopGraph",     "method": "Widgets.TopGraph.render" },
		{ "hook": "filter:widget.render:miTopList",      "method": "Widgets.TopList.render" },
        { "hook": "filter:widget.render:miTPSGraph",     "method": "Widgets.TPSGraph.render" }
	],
	"templates": "./public/templates",
	"staticDirs": {
		"public": "public"
	},
	"languages": "public/language"
}
