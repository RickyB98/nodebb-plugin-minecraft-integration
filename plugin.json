{
	"id": "nodebb-widget-minecraft-essentials",
	"name": "NodeBB Minecraft Widgets",
	"description": "Widgets for displaying information on Minecraft servers.",
	"url": "https://github.com/yariplus/nodebb-widget-minecraft-essentials",
	"library": "./library.js",
    "less": [
        "public/less/style.less"
    ],
    "scripts": [
        "public/js/client.js"
    ],
	"hooks": [
		{ "hook": "static:app.load", "method": "init" },
		{ "hook": "filter:widgets.getWidgets", "method": "defineWidgets" },
        { "hook": "filter:widget.render:widgetMCCommand", "method": "renderMCCommander" },
		{ "hook": "filter:widget.render:widgetMCServerStatus", "method": "renderMCServerStatus" },
        { "hook": "filter:widget.render:widgetMCServerStatusLegacy", "method": "renderMCServerStatusLegacy" }
	],
	"templates": "./public/templates",
	"css": [
    	"public/css/widget.css"
    ],
    "compatibility": "~0.5.0"
}