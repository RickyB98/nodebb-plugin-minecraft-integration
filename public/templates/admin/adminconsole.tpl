<div class="console">
    <div class="well">
        <form class="form">
            <div class="row">
                <h3 style="margin-top:0;">RCON Configuration</h3>
                <fieldset>
                    <div class="col-sm-12 col-xs-12">
                        <div class="form-group">
                            <label for="cid-{console.cid}-serverName">Server Name</label>
                            <input id="cid-{console.cid}-serverName" placeholder="Minecraft Server" name="serverName" class="form-control" />
                        </div>
                    </div>
                    <div class="col-sm-6 col-xs-12">
                        <div class="form-group">
                            <label for="cid-{console.cid}-ServerHost">Server Host</label>
                            <input id="cid-{console.cid}-serverHost" placeholder="0.0.0.0" name="serverHost" class="form-control" />
                        </div>
                    </div>
                    <div class="col-sm-6 col-xs-12">
                        <div class="form-group">
                            <label for="cid-{console.cid}-serverRCONPort">Server RCON Port</label>
                            <input id="cid-{console.cid}-serverRCONPort" placeholder="25575" name="serverRCONPort" class="form-control" />
                        </div>
                    </div>
                    <div class="col-sm-6 col-xs-12">
                        <div class="form-group">
                            <label for="cid-{console.cid}-serverRCONPassword">Server RCON Password</label>
                            <input type="password" id="cid-{console.cid}-serverRCONPassword" placeholder="" name="serverRCONPassword" class="form-control" />
                        </div>
                    </div>
                    <div class="col-sm-6 col-xs-12">
                        <div class="form-group">
                            <label for="cid-{console.cid}-consolePassword">Console Widget Password</label>
                            <input type="password" id="cid-{console.cid}-consolePassword" placeholder="" name="consolePassword" class="form-control" />
                        </div>
                    </div>
                </fieldset>
            </div>
        </form>
    </div>
</div>